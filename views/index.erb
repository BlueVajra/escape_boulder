<!doctype html>
<html>
<head>
  <link href="/css/normalize.css" rel="stylesheet"/>
  <link href="/css/app.css" rel="stylesheet"/>
</head>
<body>
<header>
  <div data-placeholder="intro" style="display: none;">
    <pre><%= TITLE %></pre>
  </div>
</header>
<main>
  <p data-id="story" style="display:none;">
    <%= STORY.gsub("\n\n", "<br><br>") %>
  </p>
  <div data-placeholder="game"></div>
</main>
<footer>
  <form data-id="user-form">
    <span>$</span><input type="text" data-id="input" autofocus/>
  </form>
</footer>

<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<script>
  window.quests = <%= JSON.generate(QUESTS) %>;
  window.locations = <%= JSON.generate(LOCATIONS) %>;
  window.items = <%= JSON.generate(ITEMS) %>;
  window.buildings = <%= JSON.generate(BUILDINGS) %>;
</script>
<script src="/js/command_history.js"></script>
<script src="/js/app.js"></script>

</body>
</html>